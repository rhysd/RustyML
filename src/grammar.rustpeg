use ast;
use ast::Expr;

#[export]
expr -> Expr
    = __ v:add __ { v }

add -> Expr
    = l:mult __ "+" __ r:mult { ast::FAdd::new(l, r, start_pos, pos) }
    / l:mult __ "-" __ r:mult { ast::FSub::new(l, r, start_pos, pos) }
    / mult

mult -> Expr
    = l:fact __ "*" __ r:fact { ast::FMul::new(l, r, start_pos, pos) }
    / l:fact __ "/" __ r:fact { ast::FDiv::new(l, r, start_pos, pos) }
    / fact

fact -> Expr
    = "-" __ v:atom { ast::FNeg::new(v, start_pos, pos) }
    / atom

atom -> Expr
    = [0-9]+ ("." [0-9]+)? { ast::Float::new(match_str.parse().unwrap(), start_pos, pos) }
    / "(" v:expr ")" { v }

__ = [ \t\n\r]*
